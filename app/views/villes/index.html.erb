<p id="notice"><%= notice %></p>
<%= link_to new_ville_path, class: 'btn btn-primary m-b-40' do %>
  <i class="fa fa-plus"></i>
  Nouvelle localisation
<% end %>
<h1 class="m-b-40">Liste des Villes</h1>

<table class="table" id="table">
  <thead class="thead-dark">
    <tr>
      <th>Nom ville</th>
      <th>Logitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @villes.each do |ville| %>
      <tr>
        <td><%= ville.name %></td>
        <td><%= ville.long %></td>
        <td><%= ville.lat %></td>
        <td><%= link_to 'Show', ville %></td>
        <td><%= link_to 'Destroy', ville, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Google map', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_ville_path, class: 'btn btn-primary' do %>
  <i class="fa fa-plus"></i>
  Nouvelle localisation
<% end %>