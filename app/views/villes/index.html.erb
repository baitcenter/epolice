<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<p id="notice"><%= notice %></p>

<h1>Liste des Villes</h1>

<table class="table" id="table">
  <thead>
    <tr>
      <th>Nom ville</th>
      <th>Logitude</th>
      <th>Latitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @villes.each do |ville| %>
      <tr>
        <td><%= ville.name %></td>
        <td><%= ville.long %></td>
        <td><%= ville.lat %></td>
        <td><%= link_to 'Show', ville %></td>
        <td><%= link_to 'Destroy', ville, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Google map', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ville', new_ville_path %>
</main>