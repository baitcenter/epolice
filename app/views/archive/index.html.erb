<% content_for(:title, 'LISTE DES AGENTS AYANTS DES DOSSIERS')%>
<h1 class="m-b-40">
  Archivage/transmission des documents
</h1>
<br>
<div class="row m-b-40">
  <div class="col-lg-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to 'Archiver des documents', parametre_localisation_path, class: 'noir' %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Processus d'archivage/transmission</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

      </div>
      <div class="card-footer text-muted">
        <%= link_to 'Configurer', parametre_localisation_path, class: 'card-link btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to 'Transmettre un rapport', parametre_localisation_path, class: 'noir' %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Pieces/documents perdu, irretrouvable</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

      </div>
      <div class="card-footer text-muted">
        <%= link_to 'Configurer', parametre_localisation_path, class: 'card-link btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to 'Transmettre document', archive_send_document_path, class: 'noir' %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Pieces/documents perdu, irretrouvable</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

      </div>
      <div class="card-footer text-muted">
        <%= link_to 'Démarrer', archive_send_document_path, class: 'card-link btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br>
<br>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-hover table-bordered table-borderless table-dark">
        <tbody>
        <% if @agent.nil? %>
          <tr>
            <td width="5%"><i class="fa fa-bell-o"></i></td>
            <td>Aucunes alertes publiées pour le moment.</td>
          </tr>
          </tbody>
        <% else %>
          <thead class="thead-dark">
            <tr>
              <td>Nom & Prénom</td>
              <td>Unité de rattachement</td>
              <td>region</td>
              <td>Grade</td>
              <td>Action</td>
            </tr>
          </thead>
          <tbody>
          <% @agent.each do |agent| %>
            <tr>
              <td>
                <%= agent.complete_name %>
              </td>
              <td>
                <%= agent.groupement_id.name.split[0] if !agent.groupement_id.nil? %>
              </td>
              <td>
                <%= agent.groupement_id.name.split[1] if !agent.groupement_id.nil? %>
              </td>
              <td>
                <%= agent.grade.name if !agent.grade_id.nil? %>
              </td>
              <td>
                <%= link_to  "Démarrer", "/archive/get_contravention_from_agent/#{agent.id}", class: "btn btn-sm btn-primary" %>
              </td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>
