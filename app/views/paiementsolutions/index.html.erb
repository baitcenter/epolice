<p id="notice"><%= notice %></p>

<h1 class="m-b-40">
  Solutions de paiement
</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-earning">
        <thead>
        <tr>
          <th>Type</th>
          <th>Logo</th>
          <th>Name</th>
          <th>Operator</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @paiementsolutions.each do |paiementsolution| %>
          <tr>
            <td><%= paiementsolution.type %></td>
            <td><%= image_tag(url_for(paiementsolution.image), size: 50) if paiementsolution.image.attached? %></td>
            <td><%= paiementsolution.name %></td>
            <td><%= paiementsolution.operator %></td>
            <td><%= link_to 'Show', paiementsolution %></td>
            <td><%= link_to 'Edit', edit_paiementsolution_path(paiementsolution) %></td>
            <td><%= link_to 'Destroy', paiementsolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>


<br>
<div class="text-right">
  <%= link_to new_paiementsolution_path, class: 'btn btn-primary btn-sm' do %>
    <i class="fa fa-plus"></i>
    Ajouter
  <% end %>
</div>

