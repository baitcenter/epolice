
<%= simple_form_for(@type) do |f| %>
  <%= f.error_notification %>

  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <strong>Ajout d'un nouveau commissariat</strong>
      </div>
      <div class="card-body card-block">
        <div class="form-group">
          <label for="company" class=" form-control-label">Nom type evenement</label>
          <%= f.input :name, placeholder: 'Nom type evenement', label: false %>
        </div>
        <div class="form-group">
          <label for="company" class=" form-control-label">Description type évenement</label>
          <%= f.input :description, as: :text, placeholder: 'Description type evenement', label: false %>
        </div>
        <div class="form-group">
          <label for="company" class=" form-control-label">Service rattaché a ce type d'evenement</label>
          <%= f.association :service, prompt: 'Selectionner un service', label: false %>
        </div>
      </div>
      <div class="card-footer">
        <%= f.button :submit, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
