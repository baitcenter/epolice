            <li class="nav-item">
              <%= link_to 'Cartographie des carrefours', carrefours_cartograhie_all_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Cafferour non encombrés', '#', class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Carrefours encombrés', '#', class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ajouter carrefours', new_carrefour_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Affecter agent à un carrefour', affectations_path, class: "nav-link" %>
            </li>
          </ul>

          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Gestion des agents</span>
            <a class="d-flex align-items-center text-muted" href="#">
              <span data-feather="plus-circle"></span>
            </a>
          </h6>
          <ul class="nav flex-column mb-2">
            <li class="nav-item">
              <%= link_to 'Liste des agents', agents_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ajouter un agent', new_agent_path, class: "nav-link" %>
            </li>
          </ul>

          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Gestion des villes</span>
            <a class="d-flex align-items-center text-muted" href="#">
              <span data-feather="plus-circle"></span>
            </a>
          </h6>
          <ul class="nav flex-column mb-2">
            <li class="nav-item">
              <%= link_to 'Liste des villes', villes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ajouter ville', new_ville_path, class: "nav-link" %>
            </li>
          </ul>

          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Saved reports</span>
            <a class="d-flex align-items-center text-muted" href="#">
              <span data-feather="plus-circle"></span>
            </a>
          </h6>
          <ul class="nav flex-column mb-2">
            <li class="nav-item">
              <%= link_to 'Villes', villes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Commissariats', commissariats_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Groupements regionaux', '#', class: "nav-link" %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">
                <span data-feather="file-text"></span>
                Year-end sale
