                        Version 0.7.1
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </nav>
        </div>

        <!-- Hero content: will be in the middle -->
        <div class="hero-body">
          <div class="container has-text-centered">
            <h1 class="title">
              <%= @page_title %>
            </h1>
            <h2 class="subtitle">
              Subtitle
            </h2>
          </div>
        </div>

        <!-- Hero footer: will stick at the bottom -->
        <div class="hero-foot" style="margin-bottom: 20px;">
          <nav class="tabs">
            <div class="container">
              <ul>
                <li class="is-active"><a>Overview</a></li>
                <li><%= link_to  "Agents", agents_path %></li>
                <li><%= link_to  "Alertes", alertes_path %></li>
                <li><%= link_to  "Commissariat", commissariats_path %></li>
