              </div>
              <div id="navbarMenuHeroA" class="navbar-menu">
                <div class="navbar-end">
                  <%= link_to  "Accueil", root_path, class: "navbar-item is-active" %>
                  <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                      Docs
                    </a>

                    <div class="navbar-dropdown" style="background-color: #000;">
                      <a class="navbar-item">
                        Overview
                      </a>
                      <a class="navbar-item">
                        Elements
                      </a>
                      <a class="navbar-item">
                        Components
                      </a>
                      <hr class="navbar-divider">
                      <div class="navbar-item">
                        Version 0.7.1
                      </div>
                    </div>
                  </div>
                  <a class="navbar-item">
                    Message
                  </a>
                  <a class="navbar-item">
                    Configuration
                  </a>
                  <div class="navbar-item has-dropdown is-hoverable">
                    <%= link_to  session[:name], '#', class: "navbar-item", style: "margin-right: 20px;" %>

                    <div class="navbar-dropdown" style="background-color: #000;">
