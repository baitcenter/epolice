            <li class="nav-item">
              <%= link_to 'Liste des alertes', alertes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Ajouter une alerte', new_alerte_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Alerte en cours', '#', class: "nav-link" %>
            </li>
          </ul>
