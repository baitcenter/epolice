<% content_for(:title, 'METROPOLIS IDENTIFIEZ-VOUS')%>
<!-- titre dans le Yield de application.html.erb -->
<% if flash[:notice] %>
  <div class="notice is-desktop has-text-centered">
    <div class="notification is-danger">
      <button class="delete"></button>
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>


<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">E-ASSURANCE</h3>
        <p class="subtitle has-text-grey">By DGSN</p>
        <p class="subtitle has-text-grey is-6">Merci de fournir vos identifications de connexion.</p>
        <div class="box" style="margin-top: -10px;">

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs has-text-left">
              <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
              <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Se Connecter", class: 'button is-link is-outlined is-fullwidth is-block' %>
            </div>
          <% end %>

          <%= render "assurances/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
</div>
</div>
