<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-lg-4">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">Nouvelle affectation</div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to 'Nouvelle affectation d agent', new_affectation_path, style: "color: #FFF;" %></h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">Carte des carrefours</div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to 'Voir la cartographie des carrefours', convocations_path, style: "color: #FFF;" %></h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
        <div class="card-header">Historique</div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to 'Historique des agents affectés', agents_path, style: "color: #FFF;" %></h5>
          <p class="card-text"></p>
        </div>
      </div>
    </div>
  </div>

<h1>Affectations</h1>

<table class="table" id="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Agent</th>
      <th>Matricule</th>
      <th>Grade</th>
      <th>Téléphone</th>
      <th>Carrefour</th>
      <th>Date aff.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affectations.each do |affectation| %>
      <tr>
        <td><%= affectation.type.name %></td>
        <td><%= affectation.agent.name %></td>
        <td><%= affectation.agent.matricule %></td>
        <td><%= affectation.agent.grade %></td>
        <td><%= affectation.agent.phone %></td>
        <td><%= affectation.carrefour.name %></td>
        <td><%= affectation.date %></td>
        <td><%= link_to 'Show', affectation %></td>
        <td><%= link_to 'Edit', edit_affectation_path(affectation) %></td>
        <td><%= link_to 'Destroy', affectation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Affectation', new_affectation_path %>
</main>