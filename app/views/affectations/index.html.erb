<p id="notice"><%= notice %></p>
<div class="title is-2">Liste d'affectations</div>
<table class="table" id="table">
  <thead>
    <tr>
      <th>Matricule</th>
      <th>Agent</th>
      <th>Grade</th>
      <th>Téléphone</th>
      <th>Carrefour</th>
      <th>Date début</th>
      <th>Date Fin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @affectations.each do |affectation| %>
      <tr>
        <td><%= affectation.agent.matricule %></td>
        <td><%= affectation.agent.name %> <%= affectation.agent.prenom %></td>
        <td><%= affectation.agent.grade.name %></td>
        <td><%= affectation.agent.phone %></td>
        <td><%= affectation.carrefour.name %></td>
        <td><%= affectation.date %></td>
        <td><%= affectation.fin %></td>
        <td><%= link_to 'Show', affectation, class: "button is-link is-outlined" %></td>
        <td><%= link_to 'Edit', edit_affectation_path(affectation), class: "button is-link is-outlined" %></td>
        <td><%= link_to 'Destroy', affectation, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-link is-outlined" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Affectation', new_affectation_path, class: "button is-link is-outlined" %>
</main>