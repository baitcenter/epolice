
<%= simple_form_for(@zonecouverturemotif) do |f| %>
  <%= f.error_notification %>
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <strong>Ajouter une nouvelle zone de couverture</strong>
      </div>
      <div class="card-body card-block">
        <div class="form-group">
          <label for="company" class=" form-control-label">Nom de la zone de couverture</label>
          <%= f.input :name, label: false , placeholder: 'Nom de la zone de couverture', class: 'form-control' %>
        </div>
        <div class="form-group">
          <label for="company" class=" form-control-label">Detail</label>
          <%= f.input :detail, label: false , placeholder: 'Detail de la zone de couverture a creer', class: 'form-control' %>
        </div>
      </div>
      <div class="card-footer">
        <%= f.button :submit, class: 'btn btn-primary btn-sm' %>
      </div>
    </div>
  </div>
<% end %>
