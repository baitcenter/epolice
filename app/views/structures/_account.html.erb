<%= form_tag(action: :new_account, remote: true, method: :post) do %>
  <div class="row">
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Nouveau compte</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
          <div class="card-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Partenaire</label>
              <%= text_field_tag :structure_name, nil, class: 'form-control', readonly: true, value: Structure.find(params[:id]).name %>
              <%= hidden_field :structure_id, nil, value: params[:id] %>
              <%= hidden_field :region_id, nil, value: Structure.find(params[:id]).region.id %>
              <%= hidden_field :service_id, nil, value: 1 %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Nom</label>
              <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Nom' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Prénom</label>
              <%= text_field_tag :prenom, nil, class: 'form-control', placeholder: 'Prénom' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Téléphone</label>
              <%= phone_field_tag :phone, nil, class: 'form-control', placeholder: 'Numéro de téléphone' %>
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            &nbsp;
          </div>
        </form>
      </div>
      <!-- /.card -->

    </div>
    <div class="col-md-6">
      <!-- general form elements -->
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Securité du compte</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form">
          <div class="card-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Adresse email' %>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address (confirmation)</label>
              <%= email_field_tag :email_confirm, nil, class: 'form-control', placeholder: 'Confirmer adresse email' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mot de passe</label>
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Mot de passe' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Mot de passe (confirmation)</label>
              <%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: 'Confirmer votre mot de passe' %>
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <%= submit_tag :valider, class: 'btn btn-primary float-right' %>
          </div>
        </form>
      </div>
      <!-- /.card -->

    </div>
  </div>


<% end %>
