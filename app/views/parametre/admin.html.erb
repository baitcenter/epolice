<% content_for(:title, 'GESTION UTILISATEURS')%>

<h1>
  Gestion des utilisateurs
</h1>
<p class="m-b-40">
  Utilisateurs & comptes
</p>

<div class="row">
  <div class="col-lg-3 col-sm-4 col-md-4">

    <div class="card" style="height: 17rem;">
      <div class="card-header text-dark bg-primary">Administrateurs & décideurs</div>
      <div class="card-body">
        <h5 class="card-title">Présentation</h5>
        <h6 class="card-subtitle mb-2 text-muted">Utilsateur administrateur</h6>
        <p class="card-text"></p>
      </div>
      <div class="card-footer text-mutted">
        <%= link_to 'Consulter', parametre_admins_admin_show_path, class: 'card-link btn btn-sm btn-outline-primary' %>
        <%= link_to 'Ajouter', nil, class: 'card-link btn btn-sm btn-outline-primary' %>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-sm-4 col-md-4">
    <div class="card" style="height: 17rem;">
      <div class="card-header bg-warning text-dark">GRVPC</div>
      <div class="card-body">
        <h5 class="card-title">Présentation</h5>
        <h6 class="card-subtitle mb-2 text-muted">comptes GRVPC</h6>
        <p class="card-text"></p>
      </div>
      <div class="card-footer text-mutted">
          <%= link_to 'Aperçu', access_grvpc_show_path, class: 'card-link btn btn-sm btn-outline-primary' %>
        <%= link_to 'Ajouter', access_grvpc_new_path, class: 'card-link btn btn-sm btn-outline-primary' %>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-sm-4 col-md-4">
    <div class="card" style="height: 17rem;">
      <div class="card-header bg-danger text-dark">Acces spéciaux</div>
      <div class="card-body">
        <h5 class="card-title">Présentation</h5>
        <h6 class="card-subtitle mb-2 text-muted">Agent de recouvremenet</h6>
        <p class="card-text"></p>
      </div>
      <div class="card-footer text-mutted">
        <%= link_to 'Acceder', parametre_phone_user_path, class: 'card-link btn btn-sm btn-outline-primary' %>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-sm-4 col-md-4">
    <div class="card" style="height: 17rem;">
      <div class="card-header bg-success text-dark">Autres</div>
      <div class="card-body">
        <h5 class="card-title">Présentation</h5>
        <h6 class="card-subtitle mb-2 text-muted">Agent de recouvremenet</h6>
        <p class="card-text"></p>
      </div>
      <div class="card-footer text-mutted">
        <%= link_to 'Acceder', parametre_phone_user_path, class: 'card-link btn btn-sm btn-outline-primary' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- USER DATA-->
  <div class="user-data m-b-30 col-sm-12">
    <h3 class="title-3 m-b-30">
      <i class="zmdi zmdi-account-calendar"></i>Administrateurs & decideurs
    </h3>
    <div class="table-responsive table-data">
      <table class="table">
        <thead>
        <tr>
          <td>
            <label class="au-checkbox">
              <input type="checkbox">
              <span class="au-checkmark"></span>
            </label>
          </td>
          <td>name</td>
          <td>phone</td>
          <td>role</td>
          <td>action</td>
          <td></td>
        </tr>
        </thead>
        <tbody>
        <% @admin.each do |admin| %>
          <tr>
            <td>
              <label class="au-checkbox">
                <input type="checkbox">
                <span class="au-checkmark"></span>
              </label>
            </td>
            <td>
              <div class="table-data__info">
                <h6><%= admin.name %>&nbsp; <%= admin.prenom %></h6>
                <span>
                    <%= link_to admin.email, nil %>
                </span>
              </div>
            </td>
            <td>
              <%= admin.phone %>
            </td>
            <td>
              <%= link_to admin.role.name, nil, class: "role #{admin.role.name}" %>
            </td>
            <td>
              <div class="rs-select2--trans rs-select2--sm">
                <select class="js-select2" name="property">
                  <option selected="selected">Bloquer</option>
                  <option value="">Changer MDP</option>
                  <option value="">Envoyer un message</option>
                  <option value="">Supprimer</option>
                </select>
                <div class="dropDownSelect2"></div>
              </div>
            </td>
            <td>
              <span class="more">
                  <i class="zmdi zmdi-more"></i>
              </span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="user-data__footer">
      <button class="au-btn au-btn-load">Afficher d'avantage</button>
    </div>
  </div>
  <!-- END USER DATA-->
</div>
