
<%= simple_form_for(@bulletin) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :order %>

    <%= f.input :debut, as: :date, html5: true %>

    <%= f.input :fin, as: :date, html5: true %>

    <%= f.association :commissariat, prompt: 'Selectionner un commissariat' %>

    <%= f.input :localisation, placeholder: 'La localisation' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
