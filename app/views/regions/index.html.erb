<p id="notice"><%= notice %></p>
<h1 class="m-b-40">
  Liste des regions
</h1>
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Responsive Hover Table</h3>

        <div class="card-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

            <div class="input-group-append">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-header -->
      <div class="card-body table-responsive p-0">
        <table class="table table-hover" id="table">
          <tbody><tr>
            <th>ID</th>
            <th>Nom région</th>
            <th colspan="3" class="float-right">Actions</th>
          </tr>
          <% Region.all.each do |regions| %>
            <tr>
              <td><%= regions.id %></td>
              <td><%= regions.name %></td>
              <td><%= link_to 'Voir', regions, class: 'float-right' %></td>
              <td><%= link_to 'Modifier', edit_region_path(regions), class: 'float-right' %></td>
              <td><%= link_to 'Supprimer', regions, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm float-right' %></td>
            </tr>
          <% end %>

          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>


<br>
<%= link_to new_region_path, class: 'btn btn-primary m-b-40 btn-sm float-right' do %>
  <i class="fa fa-plus"></i>
  Ajouter une Région
<% end %>
<br>

<script>
    $(document).ready( function () {
        $('#table').DataTable();
    } );
</script>
