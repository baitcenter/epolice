<h1 class="m-b-40">
  Régions
</h1>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-earning">
        <thead>
          <tr>
            <th>Nom région</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <tbody>
        <% @regions.each do |region| %>
          <tr>
            <td><%= region.name %></td>
            <td><%= link_to 'Voir', region %></td>
            <td><%= link_to 'Modifier', edit_region_path(region) %></td>
            <td><%= link_to 'Supprimer', region, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
        </tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>


