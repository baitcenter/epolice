
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom" %>
    <%= f.input :prenom %>
    <%= f.input :sexe, collection: ["Masculin", "Feminin"], prompt: "Selectionner le sexe" %>
    <%= f.input :cartegrise, label: "Carte grise" %>
    <%= f.input :immatriculation %>
    <%= f.input :phone, label: "Numéro de téléphone" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ajouter utilisateur" %>
  </div>
<% end %>
