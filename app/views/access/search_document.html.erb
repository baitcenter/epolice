<p class="title">
	<%= @title %>
</p> 
<hr style="background-color: #000;">
<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      Resultat de recherche a retourné <%= @query.count %> resultats
    </p>
    <a href="#" class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fa fa-angle-down" aria-hidden="false" style="color: #000000;"></i>
      </span>
    </a>
  </header>
  <div class="card-table">
    <div class="content">
      <table class="table is-fullwidth is-striped">
        <thead>
            <tr>
                <td width="5%">#</td>
                <td>Date</td>
                <td>Titre</td>
                <td>Ville</td>
                <td>Matricule</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
          <% if @query.nil? %>
            <tr>
              <td width="5%"><i class="fa fa-bell-o"></i></td>
              <td class="subtitle is-3"><i class="fa fa-bell-slash-o" style="color: #000000;"></i> Aucunes alertes pour le moment.</td>
            </tr>
          <% else %>
            <% @query.each do |alerte| %>
              <tr>
                <td width="5%"><i class="fa fa-bell-o" style="color: #000000;"></i></td>
                <td>
                  <%= alerte.created_at.strftime("%B %d, %Y") %>
                </td>
                <td>
                  <%= alerte.cni %>
                </td>
                <td>
                  <%= alerte.infraction.name %>
                </td>
                <td>
                  <%= alerte.status %>
                </td>
                <td>
                  <%= link_to  "Détail", "/search/documents/#{alerte.id}/read", class: "button is-small is-primary" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>