<% content_for(:title, 'AJOUTER UNE PARTENAIRE')%>
<!-- titre dans le Yield de application.html.erb -->

<h1 class="m-b-40">
  <%= link_to :back do %>
    <i class="fa fa-arrow-left"></i>
  <% end %>
  Ajout d'un nouveau partenaire
</h1>

<% if flash[:notice] %>
  <div class="notice is-desktop has-text-centered">
    <div class="notification is-danger">
      <button class="delete"></button>
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<%= simple_form_for access_member_new_path do |f| %>
  <%= f.error_notification %>
  <div class="row">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-header">
            <strong>Ajout d'un nouveau motif de contravention</strong>
          </div>
          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Adresse email</label>
              <%= f.input :email, label: false, placeholder: 'Adresse email partenaires', require: true %>
            </div>
          </div>
          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Numéro de téléphone</label>
              <%= f.input :phone, as: :tel, label: false, placeholder: 'Numéro de téléphone principal', require: true %>
            </div>
          </div>

          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Numéro de téléphone 2</label>
              <%= f.input :phone1, as: :tel, label: false, placeholder: 'Numéro de téléphone secondaire 1', require: false %>
            </div>
          </div>

          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Numéro de téléphone 3</label>
              <%= f.input :phone2, as: :tel, label: false, placeholder: 'Numéro de téléphone secondaire 2', require: false %>
            </div>
          </div>
          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Mot de passe</label>
              <%= f.input :password, as: :password, label: false, placeholder: 'Mot de passe de connexion', require: true %>
            </div>
          </div>

          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Confirmer mot de passe</label>
              <%= f.input :password_confirmation, as: :password, label: false, placeholder: 'Confirmer le mot de passe', require: true %>
            </div>
          </div>

          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Selectionner le service</label>
              <%= f.input :service_id, collection: Service.all, label: false, prompt: 'Selectionner le service', require: true %>
            </div>
          </div>

          <div class="card-body card-block">
            <div class="form-group">
              <label for="company" class=" form-control-label">Selectionner la region</label>
              <%= f.input :region_id, collection: Region.all, label: false, prompt: 'Selectionner la region du partenaire', require: true %>
            </div>
          </div>


          <div class="card-footer">
            <%= f.button :submit, 'Ajouter ce partenaire', class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
  </div>
<% end %>