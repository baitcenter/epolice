<h1 class="m-b-10">
  Décideurs
</h1>
<p class="m-b-40">
  Liste des décideurs de la plateforme
</p>

<div class="row">
  <div class="col-lg-12">
    <h2 class="title-1 m-b-25"></h2>
    <div class="table-responsive table--no-card m-b-40">
      <table class="table table-borderless table-striped table-earning">
        <thead>
        <tr>
          <th>Email</th>
          <th>Nom</th>
          <th>Role</th>
          <th>Téléphone</th>
          <th colspan="3">Action</th>
        </tr>
        </thead>
        <tbody>
        <% @user.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= user.role.name %></td>
            <td><%= user.phone %></td>
            <td>
              <%= link_to 'Bloquer', nil, class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Editer', nil, class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Supprimer', nil, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="text-right">
  <%= link_to nil, class: 'btn btn-primary m-b-40' do %>
    <i class="fa fa-plus"></i>
    Ajouter
  <% end %>
</div>


<%= form_tag controller: :access, action: :admin_new, method: :post do %>
  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <strong>Nouveau décideur</strong>
        </div>
        <div class="card-body card-block">
          <div class="form-group">
            <label for="company" class=" form-control-label">Nom</label>
            <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Nom' %>
          </div>
          <div class="form-group">
            <label for="vat" class=" form-control-label">Prenom</label>
            <%= text_field_tag :prenom, nil, class: 'form-control', placeholder: 'Prénom' %>
          </div>
          <div class="form-group">
            <label for="vat" class=" form-control-label">Numéro de téléphone</label>
            <%= telephone_field_tag :phone, nil, class: 'form-control', placeholder: 'Prénom' %>
          </div>
          <div class="form-group">
            <label for="street" class=" form-control-label">adresse email</label>
            <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Adresse email' %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <strong>&nbsp;</strong>
        </div>
        <div class="card-body card-block">
          <div class="form-group">
            <label for="street" class=" form-control-label">Mot de passe</label>
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Mot de passe' %>
          </div>
          <div class="form-group">
            <label for="street" class=" form-control-label">Confirmer mot de passe</label>
            <%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: 'Confirmer le mot de passe' %>
          </div>
          <div class="form-group">
            <div class="form-group">
              <label for="street" class=" form-control-label">role</label>
              <%= select_tag :role_id, options_from_collection_for_select(Role.all, 'id', 'name') , class: 'form-control', prompt: 'Selectionner un role', include_blank: false %>
            </div>
          </div>
        </div>
      </div>
      <div class="text-right">
        <%= submit_tag 'Enregistrer', class: 'btn btn-sm btn-primary' %>
        <input type="reset" class="btn btn-sm btn-danger" value="Annuler">
      </div>

    </div>
  </div>

<% end %>
