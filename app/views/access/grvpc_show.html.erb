<p id="notice"><%= notice %></p>

<h1 class="m-b-10">
  Compte utilisateur GRVPC
</h1>
<p class="m-b-40">
  Liste des utiliseurs des groupements
</p>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-borderless table-striped table-earning m-b-40">
      <thead>
      <th>#</th>
      <th>Adresse email</th>
      <th>Téléphone</th>
      <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @grvpc.each do |affectations| %>
        <tr>
          <td><%= affectations.id %></td>
          <td><%= affectations.email %></td>
          <td><%= affectations.phone %></td>
          <td><%= link_to 'voir', nil %></td>
          <td><%= link_to 'Editer', nil %></td>
          <td><%= link_to 'Supprimer', nil, class: 'btn btn-sm btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <div class="text-right">
      <%= link_to access_grvpc_new_path, class: 'btn btn-primary' do %>
        <%= fa_icon 'plus' %>
        Ajouter
      <% end %>
    </div>

  </div>
</div>