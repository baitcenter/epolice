<p id="notice"><%= notice %></p>

<h1 class="m-b-40">
  Postes de police
</h1>

<table class="table table-borderless table-striped table-earning m-b-40">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Region</th>
      <th>Commissariat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postepolices.each do |postepolice| %>
      <tr>
        <td><%= postepolice.name %></td>
        <td><%= postepolice.location %></td>
        <td><%= postepolice.region.name %></td>
        <td><%= postepolice.commissariat.name %></td>
        <td><%= link_to 'Voir', postepolice %></td>
        <td><%= link_to 'Editer', edit_postepolice_path(postepolice) %></td>
        <td><%= link_to 'Supprimer', postepolice, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_postepolice_path, class: 'btn btn-primary btn-sm' do %>
  <%= fa_icon 'plus' %>
  Nouveau poste de police
<% end %>
