<div class="tile is-ancestor">
  <div class="tile is-vertical is-12">
    <div class="tile">
      <div class="tile is-parent is-vertical">
        <% @journale.each do |a| %>
            <article class="tile is-child box">
            <p class="title"><i class="fa fa-bell-slash noir"></i> <%= a.titre %></p>
