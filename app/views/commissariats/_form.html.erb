<%= simple_form_for(@commissariat) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <strong>&nbsp;</strong>
        </div>
        <div class="card-body card-block">
          <div class="form-group">
            <label for="company" class=" form-control-label">Region du commissariat</label>
            <%= f.association :region, prompt: 'Selectionner une region', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Département du commissariat</label>
            <%= f.grouped_collection_select :departement_id, Region.order(:name), :departement, :name, :id, :name, include_blank: false, label: false, input_html: {class: 'form-control'} %>
            <%= f.association :departement, label: false, prompt: 'Selectionner un département' %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Arrondissement du commissariat</label>
            <%= f.association :arrondissement, prompt: 'Selectionner un arrondissement', label: false %>
          </div>
        </div>
        <!-- div class="card-footer">
        </div -->
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <strong>&nbsp;</strong>
        </div>
        <div class="card-body card-block">
          <div class="form-group">
            <label for="company" class=" form-control-label">Nom du commissariat</label>
            <%= f.input :name, placeholder: 'Nom du commissariat', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Téléphone du commissariat</label>
            <%= f.input :phone, as: :tel, placeholder: 'Téléphone du commissariat', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Adresse email commissariat</label>
            <%= f.input :email, as: :email, placeholder: '(Auto generate)', label: false, readonly: true %>
          </div>
        </div>
        <!-- div class="card-footer">
        </div -->
      </div>
      <div class="text-right">
        <%= f.button :submit, 'Valider', class: 'btn btn-primary btn-sm' %>
        <input type="reset", class="btn btn-danger btn-sm" value="Annuler" />
      </div>
    </div>
  </div>
<% end %>