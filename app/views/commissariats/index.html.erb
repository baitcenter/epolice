<p id="notice"><%= notice %></p>
<%= link_to new_commissariat_path, class: 'btn btn-primary m-b-40 btn-sm' do %>
  <i class="fa fa-plus"></i>
  Ajouter un commissariat
<% end %>
<h1 class="m-b-40">
  Commissariats
</h1>
<div class="col-lg-12">
  <div class="table-responsive table--no-card m-b-30">
    <table class="table table-borderless table-striped table-earning">
      <thead>
      <tr>
        <th>Nom</th>
        <th>Numéro téléphone</th>
        <th>Région</th>
        <th>Département</th>
        <th>Arrondissement</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <% @commissariats.each do |commissariat| %>
          <tr>
            <td><%= commissariat.name %></td>
            <td><%= commissariat.phone %></td>
            <td><%= commissariat.region.name if !commissariat.region_id.nil? %></td>
            <td><%= commissariat.departement.name if !commissariat.departement_id.nil? %></td>
            <td><%= commissariat.arrondissement.name if !commissariat.arrondissement_id.nil? %></td>
            <td><%= link_to 'Voir', commissariat %></td>
            <td><%= link_to 'Edit', edit_commissariat_path(commissariat) %></td>
            <td><%= link_to 'Supprimer', commissariat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to new_commissariat_path, class: 'btn btn-primary m-b-40 btn-sm' do %>
  <i class="fa fa-plus"></i>
  Ajouter un commissariat
<% end %>