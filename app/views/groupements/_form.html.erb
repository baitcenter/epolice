
<%= simple_form_for(@groupement) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header">
          <strong>&nbsp;</strong>
        </div>
        <div class="card-body card-block">
          <div class="form-group">
            <label for="company" class=" form-control-label">Région du groupement</label>
            <%= f.association :region, prompt: 'Selectionner une region', label: false, selected: "Littoral" %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Localisation groupement</label>
            <%= f.input :localisation, as: :text, placeholder: 'Localisation groupement', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Nom du groupement</label>
            <%= f.input :name, placeholder: 'Nom du groupement', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Téléphone du groupement</label>
            <%= f.input :phone, as: :tel, placeholder: 'Téléphone du groupement', label: false %>
          </div>
          <div class="form-group">
            <label for="company" class=" form-control-label">Adresse email du groupement</label>
            <%= f.input :email, as: :email, placeholder: '(auto generate)', label: false, readonly: true %>
          </div>
        </div>
      </div>
      <div class="text-right">
        <%= f.button :submit, 'Ajouter', class: 'btn btn-primary btn-sm' %>
        <input type="reset", class="btn btn-danger btn-sm" value="Annuler" />
      </div>
    </div>
  </div>

<% end %>
