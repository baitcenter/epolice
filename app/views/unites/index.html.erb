<p id="notice"><%= notice %></p>
<%= link_to new_unite_path, class: 'btn btn-primary m-b-40' do %>
  <i class="fa fa-plus"></i>
  Ajouter un service
<% end %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <h1 class="m-b-40">
        <%= link_to :back do %>
          <i class="fa fa-arrow-left"></i>
        <% end %>
        Services
      </h1>

      <table class="table table-borderless table-striped table-earning">
        <thead>
        <tr>
          <th>Nom service</th>
          <th>Description service</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @unites.each do |unite| %>
          <tr>
            <td><%= unite.name %></td>
            <td><%= unite.description %></td>
            <td><%= link_to 'Show', unite %></td>
            <td><%= link_to 'Edit', edit_unite_path(unite) %></td>
            <td><%= link_to 'Destroy', unite, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<%= link_to new_unite_path, class: 'btn btn-primary' do %>
  <i class="fa fa-plus"></i>
  Ajouter un service
<% end %>