
<%= simple_form_for(@agent) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :prenom %>
    <%= f.input :phone %>
    <%= f.input :matricule %>
    <%= f.input :grade, prompt: "Selectionner le grade", collection: ["Lieutenant", "Adjudant", "Capitaine", "Sergent"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
