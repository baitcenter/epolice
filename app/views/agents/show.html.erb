<% content_for(:title, 'DASHBOARD GESTION DES AGENTS')%>

<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <strong>Details de l'agent <%= @agent.name.upcase+' '+@agent.prenom.upcase %></strong>
      </div>
      <div class="card-body card-block">
        <div class="form-group">
          <label for="company" class=" form-control-label">Photo/avatar</label>
          <br>
          <%= image_tag(@agent.avatar, size: 200) if @agent.avatar.attached? %>
        </div>
        <div class="form-group">
          <label for="vat" class=" form-control-label">Matricule</label>
          <input type="text" id="vat" readonly class="form-control" value="<%= @agent.matricule %>">
        </div>
        <div class="form-group">
          <label for="street" class=" form-control-label">Date naissance</label>
          <!--input type="text" id="street" value="<%= @agent.age.to_date %>" class="form-control" -->
        </div>
        <!--div class="form-group">
          <label for="street" class=" form-control-label">Age (ans)</label>
          <input type="text" id="street" value="<%= Date.today.year - @agent.age.to_date.year %> ans" class="form-control">
        </div-->
        <div class="form-group">
          <label for="street" class=" form-control-label">Nom</label>
          <input type="text" id="street" value="<%= @agent.name %>" class="form-control">
        </div>
        <div class="row form-group">
          <div class="col-8">
            <div class="form-group">
              <label for="city" class=" form-control-label">Prénom</label>
              <input type="text" id="city" value="<%= @agent.prenom %>" class="form-control">
            </div>
          </div>
          <div class="col-8">
            <div class="form-group">
              <label for="postal-code" class=" form-control-label">Téléhpone</label>
              <input type="text" id="postal-code" value="<%= @agent.phone %>" class="form-control">
            </div>
          </div>
          <div class="col-8">
            <div class="form-group">
              <label for="postal-code" class=" form-control-label">Grade</label>
              <input type="text" id="postal-code" value="<%= @agent.grade.name if !@agent.grade_id.nil? %>" class="form-control">
            </div>
          </div>
          <div class="col-8">
            <div class="form-group">
              <label for="postal-code" class=" form-control-label">Région de localisation</label>
              <input type="text" id="postal-code" value="<%= @agent.region.name if !@agent.region_id.nil? %>" class="form-control">
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to agents_path, class: 'btn btn-primary btn-sm' do %>
          <i class="fa fa-arrow-left"></i>
          Retour
        <% end %>
        <%= link_to edit_agent_path(@agent.id), class: 'btn btn-primary btn-sm' do %>
          <i class="fa fa-edit"></i>
          Mettre à jour
        <% end %>
      </div>
    </div>
  </div>
</div>
<p id="notice" class="notification"><%= notice %></p>
<%= link_to :back, class: 'button is-link is-outlined' do %>
  <i class="fa fa-arrow-left noir"></i>
  Retourner à la vue precedente
<% end %>
</p>