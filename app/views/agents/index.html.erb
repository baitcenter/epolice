<p id="notice"><%= notice %></p>
<h1>Agents</h1>

<table class="table" id="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Prenom</th>
      <th>Téléphone</th>
      <th>Matricule</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents = Agent.all %>
    <% @agents.each do |agent, index| %>
      <tr>
        <td><%= agent.id %></td>
        <td><%= agent.name %></td>
        <td><%= agent.prenom %></td>
        <td><%= agent.phone %></td>
        <td><%= agent.matricule %></td>
        <td><%= agent.grade.name if !agent.grade.nil? %></td>
        <td><%= link_to 'Show', agent, class: "button is-primary" %></td>
        <td><%= link_to 'Edit', edit_agent_path(agent), class: "button is-primary" %></td>
        <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agent', new_agent_path, class: "button is-primary" %>