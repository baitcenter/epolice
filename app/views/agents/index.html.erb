<% content_for(:title, 'DASHBOARD GESTION DES AGENTS')%>
<p id="notice"><%= notice %></p>

<%= link_to new_agent_path, class: 'btn btn-primary m-b-40 btn-sm' do %>
  <i class="fa fa-plus"></i>
  Ajouter un agent
<% end %>
<h1 class="m-b-40">
  Agents de police
</h1>

<div class="row">
  <div class="col-lg-12 col-xl-12 col-sm-12 table-responsive">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-earning table-borderless table-active">
        <thead>
        <tr>
          <th>Matricule</th>
          <th>Nom & prénom</th>
          <th>Phone</th>
          <th>Région</th>
          <th>GRVPC</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @agents.each do |agent| %>
          <tr>
            <td><%= agent.matricule %></td>
            <td><%= agent.complete_name %></td>
            <td><%= agent.phone %></td>
            <td><%= agent.groupement.name.split[1] if !agent.groupement_id.nil? %></td>
            <td><%= agent.groupement.name if !agent.groupement_id.nil? %></td>
            <td><%= link_to 'Voir', agent %></td>
            <td>
              <%= link_to 'Modifier', edit_agent_path(agent) %>
            </td>
            <td>
              <%= link_to 'Supprimer', agent, method: :delete, data: { confirm: "Supprimer l'agent #{agent.complete_name}?" }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<div class="d-inline p-2">
  <%= link_to new_agent_path, class: 'btn btn-primary btn-sm' do %>
    <i class="fa fa-plus"></i>
    Ajouter un agent
  <% end %>
</div>
<%= link_to agents_path(format: :xls), class: 'btn btn-success btn-sm' do %>
  <i class="fa fa-file-excel"></i>
  Exporter les agents
<% end %>