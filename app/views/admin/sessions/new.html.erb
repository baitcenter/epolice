  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= full_title(yield :title)%></title>
    <!-- Fontfaces CSS-->
    <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://colorlib.com/polygon/cooladmin/vendor/font-awesome-5/css/fontawesome-all.min.css' %>
    <%= stylesheet_link_tag 'https://colorlib.com/polygon/cooladmin/vendor/font-awesome-4.7/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag 'https://colorlib.com/polygon/cooladmin/vendor/mdi-font/css/material-design-iconic-font.min.css' %>


    <%= stylesheet_link_tag 'https://colorlib.com/polygon/cooladmin/css/font-face.css' %>
    <%= stylesheet_link_tag 'https://colorlib.com/polygon/cooladmin/css/theme.css' %>


    <!-- Main CSS-->
    <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'main', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="">
  <div class="page-wrapper">
    <div class="page-content--bge5">
      <div class="container">
        <div class="login-wrap">
          <div class="login-content">
            <div class="login-logo">
              <a href="#">
                <%= image_tag('https://cameroon-report.com/wp-content/uploads/2018/09/police_cmr.jpg', size: '500') %>
              </a>
            </div>
            <div class="login-form">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                <div class="form-group">
                  <label>Email Address</label>
                  <%= f.input :email, required: true, autofocus: true, placeholder: 'adresse email', label: false %>
                </div>
                <div class="form-group">
                  <label>Mot de passe</label>
                  <%= f.input :password, required: true, placeholder: 'Votre mot de passe', label: false %>
                </div>
                <div class="login-checkbox">
                  <label>
                    <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
                  </label>
                </div>
                <%= f.button :submit, "Se connecter", class: 'btn btn-primary' %>
              <% end %>
              <div class="register-link">
                <p>
                  Don't you have account?
                  <%= link_to "request account", new_admin_registration_path %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  </body>

  </html>
  <!-- end document-->

