<% content_for(:title, 'DASHBOARD TOUTES LES CONTRAVENTIONS')%>
<br>
<div class="title is-3">
  Liste de toutes les constats de la circulation
</div>
<br>
<div class="row">
  <div class="col-sm">
    <h4>Constats </h4>
    <div class="table-responsive">
      <table id="table" class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
          <th>#</th>
          <th>Titre</th>
          <th>description</th>
          <th>Action</th>
        </tr>
        </thead>
        <tbody>
        <% @constat.each do |constat| %>
          <tr>
            <td><i class="fa fa-bell"></i></td>
            <td><%= constat.typeaccident.name if !constat.typeaccident_id.nil? %>></td>
            <td><%= constat.comment %></td>
            <td>
              <%= link_to 'Voir', grvpc_detail_constat_path(index: constat.id), class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>