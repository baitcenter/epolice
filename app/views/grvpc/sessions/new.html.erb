  <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= javascript_include_tag 'https://code.jquery.com/jquery-3.3.1.min.js' %>
  <%= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js' %>
  <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js' %>
  <%= javascript_include_tag 'application.js', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://colorlib.com/polygon/cooladmin/js/main.js', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js' %>
