<% content_for(:title, 'DASHBOARD TOUTES LES ALERTES')%>
<div class="title is-3">
  Liste de toutes les alertes
</div>
<br>
<div class="columns">
  <div class="column is-12">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Alertes
        </p>
        <a href="#" class="card-header-icon" aria-label="more options">
          <span class="icon">
            <i class="fa fa-angle-down" aria-hidden="true"></i>
          </span>
        </a>
      </header>
      <div class="card-table">
        <div class="content">
          <table class="table is-fullwidth is-striped" id="table">
            <theader>
              <tr height="50">
                <td>#</td>
                <td>Date cr√©ation</td>
                <td>Titre</td>
                <td>Agent</td>
                <td>Action</td>
              </tr>
            </theader>
            <tbody>
            <% @alerte.each do |a| %>
              <tr>
                <td width="5%"><i class="fa fa-bell-o"></i></td>
                <td><%= a.created_at %></td>
                <td><%= a.titre %></td>
                <td><%= a.agent.name %>&nbsp,<%= a.agent.prenom %></td>
                <td>
                  <div class="dropdown show">
                    <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Actions
                    </a>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                      <%= link_to 'Detail', "/grvpc/alertes/#{a.id}/detail", class: 'dropdown-item' %>
                      <a class="dropdown-item" href="#">Commenter</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="#">Supprimer</a>
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>