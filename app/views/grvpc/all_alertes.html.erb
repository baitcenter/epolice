<% content_for(:title, 'DASHBOARD TOUTES LES ALERTES')%>
<div class="title is-3">
  Liste de toutes les alertes
</div>
<br>
<div class="columns">
  <div class="column is-12">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">
          Alertes
        </p>
        <a href="#" class="card-header-icon" aria-label="more options">
          <span class="icon">
            <i class="fa fa-angle-down" aria-hidden="true"></i>
          </span>
        </a>
      </header>
      <div class="card-table">
        <div class="content">
          <table class="table is-fullwidth is-striped">
            <theader>
              <tr height="50">
                <td>#</td>
                <td>Date cr√©ation</td>
                <td>Titre</td>
                <td>Ville</td>
                <td>Agent</td>
                <td>Action</td>
              </tr>
            </theader>
            <tbody>
            <% @alerte.each do |a| %>
              <tr>
                <td width="5%"><i class="fa fa-bell-o"></i></td>
                <td><%= a.created_at %></td>
                <td><%= a.titre %></td>
                <td><%= a.region.name if !a.region_id.nil? %></td>
                <td><%= a.agent.name %>&nbsp,<%= a.agent.prenom %></td>
                <td>
                  <%= link_to 'Action', "/grvpc/alertes/#{a.id}/detail", class: 'button is-small is-link is-outlined' %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>