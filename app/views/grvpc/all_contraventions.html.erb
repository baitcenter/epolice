                <% end %>
                <td><%= a.infraction.motif if !a.infraction_id.nil? %></td>
                <td><%= a.agent.name %>&nbsp,<%= a.agent.prenom %></td>
                <td><a class="button is-small is-link is-outlined" href="#">Action</a></td>
              </tr>
            <% end %>
