<% content_for(:title, 'ALERTES NON RESOLUES')%>
<!-- -->
<div class="overview-wrap m-b-40">
  <h2 class="title-1">
    <%= link_to :back do %>
      <i class="fa fa-arrow-left"></i>
    <% end %>
    Liste des Infractions</h2>
  <%= link_to gestion_contraventions_contraventions_all_path(format: :xls), class: "btn btn-success" do %>
    <i class="zmdi zmdi-chart-donut"></i>
    Exporter (xls)
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-earning">
        <thead>
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Phone</th>
          <th >Agent</th>
          <th >Pieces retenues</th>
          <th colspan="3">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <% @all.each do |alerte| %>
          <tr>
            <td width="5%"><i class="fa fa-bell-o" style="color: #000000;"></i></td>
            <td>
              <%= alerte.created_at.strftime("%B %d, %Y") %>
            </td>
            <td>
              <%= alerte.phone %>
            </td>
            <td>
              <%= alerte.agent.name %>&nbsp;<%= alerte.agent.prenom %>
            </td>
            <td>
              <%= alerte.pieceretenu.name if !alerte.pieceretenu_id.nil? %>
            </td>
            <td>
              <%= link_to "Show", convocation_path(alerte) %>
            </td>
            <td>
              <%= link_to "Edit", edit_convocation_path(alerte) %>
            </td>
            <td>
              <%= link_to "Delete", alerte, method: :delete, data: {confirm: "Supprimer l'infraction NÂ° #{alerte.cni}"} %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="overview-wrap m-b-40">
  <h2 class="title-1">&nbsp;</h2>
  <%= link_to "#", class: "btn btn-primary" do %>
    <i class="zmdi zmdi-chart-donut"></i>
    Statistiques
  <% end %>
</div>
