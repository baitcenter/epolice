<div class="overview-wrap m-b-40">
  <h2 class="title-1">Alertes</h2>
  <%= link_to "#", class: "btn btn-primary" do %>
    <i class="zmdi zmdi-plus"></i>
    Toutes les alertes
  <% end %>
</div>
<p id="notice"><%= notice %></p>

<h1 class="title is-2">Liste des Alertes</h1>

<table class="table" id="table">
  <thead class="thead-dark">
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Date</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alertes.each do |alerte| %>
      <tr>
        <td><%= alerte.titre %></td>
        <td><%= alerte.description %></td>
        <td><%= alerte.date %></td>
        <td><%= alerte.ville.name %></td>
        <td><%= link_to 'Show', alerte %></td>
        <td><%= link_to 'Edit', edit_alerte_path(alerte) %></td>
        <td><%= link_to 'Destroy', alerte, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alerte', new_alerte_path, class: 'button is-primary' %>