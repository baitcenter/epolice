<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<p id="notice"><%= notice %></p>

<h1>Alertes</h1>

<table class="table table-hover" id="table">
  <thead class="thead-dark">
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Date</th>
      <th>Ville</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alertes.each do |alerte| %>
      <tr>
        <td><%= alerte.titre %></td>
        <td><%= alerte.description %></td>
        <td><%= alerte.date %></td>
        <td><%= alerte.ville.name %></td>
        <td><%= link_to 'Show', alerte %></td>
        <td><%= link_to 'Edit', edit_alerte_path(alerte) %></td>
        <td><%= link_to 'Destroy', alerte, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alerte', new_alerte_path %>
</main>