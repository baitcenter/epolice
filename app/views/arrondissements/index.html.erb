<h1 class="m-b-40">Arrondissements</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive table--no-card m-b-30">
      <table class="table table-borderless table-striped table-earning">
        <thead>
        <tr>
          <th>Name</th>
          <th>Region</th>
          <th>Departement</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @arrondissements.each do |arrondissement| %>
          <tr>
            <td><%= arrondissement.name %></td>
            <td><%= arrondissement.region.name %></td>
            <td><%= arrondissement.departement.name %></td>
            <td><%= link_to 'Show', arrondissement %></td>
            <td><%= link_to 'Edit', edit_arrondissement_path(arrondissement) %></td>
            <td><%= link_to 'Destroy', arrondissement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

