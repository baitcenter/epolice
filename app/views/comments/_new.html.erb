<%= form_for([@alerte, Comment.new], remote: true) do |form| %>
  <%= form.text_field :title, {class: 'form-control', placeholder: 'Titre commentaire'} %> <br>
  <%= form.text_area :content, size: '70x5', class: 'form-control', placeholder: 'contenu de votre commentaire' %> <br>
  <%= form.hidden_field :publisher, value: current_grvpc.email %>
  <%= form.submit('Creer', class: 'btn btn-sm btn-danger commentaire') %>
<% end %>
